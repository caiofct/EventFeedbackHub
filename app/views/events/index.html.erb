<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Event Feedback Hub</h1>

  <div class="mb-6 bg-white p-4 rounded-lg shadow">
    <%= render "form" %>
  </div>

  <h2 class="text-2xl font-bold mb-6">Feedback Stream</h2>

  <div class="mb-6 bg-white p-4 rounded-lg shadow">
    <%= render "filters" %>
  </div>

  <%= turbo_frame_tag :feedbacks, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" do %>
    <%= render partial: "feedbacks/feedback", collection: @feedbacks %>
  <% end %>

  <div class="mt-6 flex justify-end">
    <%= paginate @feedbacks %>
  </div>
</div>
