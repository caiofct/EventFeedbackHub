<%= form_tag events_path, method: :get, class: "flex gap-4 items-end" do %>
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Event</label>
    <%= select_tag :event_id,
        options_from_collection_for_select(Event.all, :id, :name, params[:event_id]),
        prompt: "All Events",
        class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
    <%= select_tag :rating,
        options_for_select((1..5).map { |r| [pluralize(r, "star"), r] }, params[:rating]),
        prompt: "Any Rating",
        class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <%= submit_tag "Filter", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
<% end %>
